{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off",
				"useExportType": "error"
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "error",
					"fix": "safe"
				},
				"noUnusedImports": {
					"level": "error",
					"fix": "safe"
				}
			},
      "a11y": {
        "noLabelWithoutControl": "off",
        "useSemanticElements": "off",
        "useButtonType": "off",
        "noStaticElementInteractions" : "off",
        "useKeyWithClickEvents": "off"
      },
      "complexity": {
        "noImportantStyles": "off"
      }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
